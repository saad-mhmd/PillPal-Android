<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
style="@style/loginCard"
app:cardCornerRadius="@dimen/loginCardRadius"
android:elevation="5dp"
android:layout_gravity="center"
android:layout_marginTop="@dimen/loginViewsMargin"
android:layout_marginBottom="@dimen/loginViewsMargin"
android:background="@color/whiteCardColor">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        style="@style/headerTextPrimary"
        android:text="Pharmacy Info"
        android:layout_marginTop="@dimen/loginViewsMargin"
        android:layout_marginBottom="10dp"/>


        <!-- Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_label"
            style="@style/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name">

            <EditText
                style="@style/modifiedEditText"
                android:id="@+id/pharmaNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:id="@+id/email_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginTop="16dp">

            <EditText
                style="@style/modifiedEditText"
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:id="@+id/phone_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:layout_marginTop="16dp">

            <EditText
                style="@style/modifiedEditText"
                android:id="@+id/pharmaphoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:id="@+id/address_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="16dp"
            >

            <EditText
                style="@style/modifiedEditText"
                android:id="@+id/pharma_addresss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Medical Information -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:id="@+id/medical_info_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Medical Information (Condition, Medications currently taking, Allergies)"
            android:layout_marginTop="16dp">
            <EditText
                style="@style/modifiedEditText"
                android:id="@+id/medical_info_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPostalAddress"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>



        <!-- Pharmacy Preference -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/medical_info_input"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <EditText
                style="@style/modifiedEditText"
                android:id="@+id/pharmacy_preference_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Pharmacy Preference:"
                android:layout_marginTop="16dp"/>

        </com.google.android.material.textfield.TextInputLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <!-- Submit Button -->
        <Button
            android:id="@+id/getlocationb"
            android:layout_gravity="center"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pharmacy_preference_input"
            android:layout_marginTop="32dp"
            android:text="get location"
            android:textSize="10sp"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:textStyle="bold" />
        <Button
            android:layout_weight="1"
            android:id="@+id/submitButton"
            android:layout_gravity="center"

            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pharmacy_preference_input"
            android:layout_marginTop="32dp"
            android:text="Submit"
            android:textSize="18sp"
            android:textStyle="bold" />
</LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
