<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/document_id_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Document ID"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/medicinein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:text="Medicine"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/find_medd_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find medicine"
                android:onClick="documentInfo"
                android:layout_margin="8dp"/>

            <Button
                android:id="@+id/view_document_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Document"
                android:onClick="documentInfo"
                android:layout_margin="8dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
